<?xml version="1.0"?>
<PropertyList>

 <path>fuelgauge.ac</path>

 <animation>
  <type>material</type>
  <object-name>Face</object-name>
  <emission>
    <factor-prop>/controls/lighting/instruments-norm</factor-prop>
    <red>0.75</red>
    <green>0.25</green>
    <blue>0.25</blue>
  </emission>
 </animation>

	<animation>
		<type>material</type>
		<object-name>Needle</object-name>
	  <diffuse>
	   <red>0.75</red>
	   <green>0.25</green>
	   <blue>0.25</blue>
	  </diffuse>

	  <ambient>
	   <red>0.75</red>
	   <green>0.25</green>
	   <blue>0.25</blue>
	  </ambient>

	  <specular>
	   <red>0.0</red>
	   <green>0.0</green>
	   <blue>0.0</blue>
	  </specular>

	  <emission>
	   <red>0.0</red>
	   <green>0.0</green>
	   <blue>0.0</blue>
	  </emission>

	  <transparency>
	   <alpha>1.0</alpha>
	  </transparency>

	  <shininess>10</shininess>
	</animation>
 
<animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property>/consumables/fuel/tank[0]/level-gal_us</property>
  <min>5.0</min>
  <max>100</max> 
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>10</ind>
    <dep>75</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.017</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

<!-- Light cockpit--> 
   <animation> 
      <type>material</type>
      <emission> 
        <factor-prop>/controls/lighting/panel-norm</factor-prop>
        <red>0.75</red>
        <green>0.25</green>
        <blue>0.25</blue>
      </emission>
    </animation>
 
</PropertyList>
